    <div class="container" id="detail_container">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= posts.title %></h5>
          <div class="detail_head">
            <span class="detail_writer text-muted"
              >작성자: <%= posts.writer %></span
            >
