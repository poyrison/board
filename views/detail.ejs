              class="btn btn-dark"
              data-category="<%= posts.category %>"
              id="cmt-btn"
              data-id="<%= posts._id %>"
              data-writer="<%= user.name %>"
            >
              작성
            </button>
          </form>
          <%}else{%>
          <form class="cmt-form">
            <textarea
              type="textarea"
              id="cmt-write-area"
              class="form-control"
              placeholder="로그인 후에 이용해 주세요"
              disabled
              style="cursor: not-allowed"
            ></textarea>
            <button
              type="submit"
              class="btn btn-dark"
              id="cmt-btn"
              disabled
              style="cursor: not-allowed"
            >
              작성
            </button>
          </form>
          <% }%>
        </div>
        <!-- 댓글 작성란 끝 -->
      </div>
