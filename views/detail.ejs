                  method: "post",
                  url: "/comment",
                  data: {
                    comment: commentValue,
                    id: e.target.dataset.id,
                    cmtWriter: e.target.dataset.writer,
                    cmtTime: cmtTime,
                  },
                }).then(
                  swal({
                    title: "댓글을 작성했습니다.",
                    icon: "success",
                  }).then((res) => {
                    window.location.href = `/detail/${e.target.dataset.id}`;
                  })
                );
              }
            }
          });
        }
      });
