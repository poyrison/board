<!DOCTYPE html>
<html lang="kr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= posts.name %></title>
    <!-- 부트스트랩 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/main.css" />
    <script
      src="https://kit.fontawesome.com/1f2a889857.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('nav.ejs') %>
    <div class="container flex">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= posts.name %></h5>
          <div class="detail_head">
            <span class="detail_writer text-muted"
              >작성자: <%= posts.writer %></span
            >
            <span class="detail_date mb-2 text-muted"><%= posts.date %></span>
          </div>
          <hr />
          <div class="content_box">
            <p class="card-text"><%= posts.content %></p>
            <img
              src="../public/image/<%= posts.upload %>"
              alt="<%= posts.upload %>"
              style="max-width: 800px; max-height: 800px"
            />
          </div>
          <div class="modify_box">
            <% if(user){%> <% if( user.id == posts.writerId){ %>
            <div>
              <a
                href="/edit/<%= posts._id %>"
                class="btn btn-outline-primary modify"
                data-id="<%= posts._id %>"
                >수정하기</a
              >
              <button
                type="button"
                class="btn btn-outline-danger delete"
                data-id="<%= posts._id %>"
                data-user_id="<%= user.id %>"
                data-writer_id="<%= posts.writerId %>"
                data-writer="<%= posts.writer %>"
                data-upload="<%= posts.upload %>"
              >
                삭제
              </button>
            </div>
            <%}%> <%} %>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
      $(".delete").click((e) => {
        swal({
          title: "정말 삭제하시겠습니까?",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        }).then((willDelete) => {
          if (willDelete) {
            if (e.target.dataset.upload) {
              $.ajax({
                method: "DELETE",
                url: "/delete",
                data: {
                  _id: e.target.dataset.id,
                  writerId: e.target.dataset.writer_id,
                  writer: e.target.dataset.writer,
                  upload: e.target.dataset.upload,
                },
              }).done(
                swal("삭제를 완료했습니다!", {
                  icon: "success",
                }).then((res) => {
                  console.log("삭제 완료");
                  location.replace("/");
                })
              );
            } else {
              $.ajax({
                method: "DELETE",
                url: "/delete",
                data: {
                  _id: e.target.dataset.id,
                  writerId: e.target.dataset.writer_id,
                  writer: e.target.dataset.writer,
                },
              }).done(
                swal("삭제를 완료했습니다!", {
                  icon: "success",
                }).then((res) => {
                  console.log("삭제 완료");
                  location.replace("/");
                })
              );
            }
          }
        });
      });
      $(".modify").click((e) => {
        e.preventDefault();
        swal({
          title: "수정하시겠습니까?",
          icon: "warning",
          buttons: true,
          dangerMode: true,
        }).then((willModify) => {
          if (willModify) {
            window.location.href = `/edit/${e.target.dataset.id}`;
          }
        });
      });
    </script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"
      integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
